<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#232740"
    tools:context=".view.fragment.FragmentAddItem">

    <LinearLayout
        android:background="@drawable/abuabu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:gravity="center"
                android:layout_gravity="center"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardMaxElevation="5dp"
                android:layout_margin="5dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_width="350dp"
                        android:layout_height="350dp"
                        android:src="@drawable/example_image"
                        android:scaleType="fitXY">

                    </ImageView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:textColor="#BFBABA"
                android:layout_marginTop="12dp"
                android:textSize="15dp"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:text="Data Makanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>



            <TextView
                android:textColor="#BFBABA"
                android:drawablePadding="5dp"
                android:text="Jenis Makanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <EditText
                android:id="@+id/et_add_item_jenis_makanan"
                android:gravity="center"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>

            <TextView
                android:textColor="#BFBABA"
                android:drawablePadding="5dp"
                android:text="Tidak di konsumsi sejak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <EditText
                android:id="@+id/et_add_item_tidak_dikonsumsi_sejak"
                android:gravity="center"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>
            <TextView
                android:textColor="#BFBABA"
                android:drawablePadding="5dp"
                android:text="Di Posting Karena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <EditText
                android:id="@+id/et_add_item_di_posting_karena"
                android:gravity="center"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>
            <TextView
                android:textColor="#BFBABA"
                android:drawablePadding="5dp"
                android:text="Berat Makanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <EditText
                android:id="@+id/et_add_item_berat_makanan"
                android:gravity="center"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>

            <TextView
                android:textColor="#BFBABA"
                android:drawablePadding="5dp"
                android:text="Nama Toko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <EditText
                android:id="@+id/et_add_item_nama_toko"
                android:gravity="center"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>

            <TextView
                android:textColor="#BFBABA"
                android:drawablePadding="5dp"
                android:text="Nama Penjual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <EditText
                android:id="@+id/et_add_item_nama_penjual"
                android:gravity="center"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>
            <TextView
                android:textColor="#BFBABA"
                android:drawablePadding="5dp"
                android:text="Lokasi Makanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <EditText
                android:id="@+id/et_add_item_lokasi_makanan"
                android:gravity="center"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>
            <TextView
                android:textColor="#BFBABA"
                android:text="Harga Makanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <EditText
                android:id="@+id/et_add_item_harga_makanan"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>

            <TextView
                android:textColor="#BFBABA"
                android:text="Saran Penggunaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <EditText
                android:id="@+id/et_add_item_saran_penggunaan"
                android:gravity="center"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>


            <TextView
                android:textColor="#BFBABA"
                android:text="Kandungan Kimia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <EditText
                android:id="@+id/et_add_item_kandungan_kimi"
                android:gravity="center"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>





            <TextView
                android:id="@+id/tv_add_item_btn_subbmit_makanan"
                android:textColor="#BFBABA"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Post Makanan "
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>




        </LinearLayout>

    </LinearLayout>





</ScrollView>