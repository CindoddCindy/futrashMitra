<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#232740"
    tools:context=".view.MyAccount">

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/abuabu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:shadowColor="#E6ECED"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="1"
                android:layout_gravity="center"
                android:textColor="#BFBABA"
                android:layout_marginBottom="20dp"
                android:textSize="15dp"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:text="My Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

            </TextView>


            <de.hdodenhof.circleimageview.CircleImageView
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/mitra_profile"
                tools:layout_editor_absoluteX="139dp"
                tools:layout_editor_absoluteY="239dp">

            </de.hdodenhof.circleimageview.CircleImageView>




            <TextView
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bakron_kembali"
                android:textColor="#BFBABA"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="5dp"
                android:text="Nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>


            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bakron_kembali"
                android:textColor="#BFBABA"
                android:drawableLeft="@drawable/ic_baseline_mail_24"
                android:drawablePadding="5dp"
                android:text="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bakron_kembali"
                android:textColor="#BFBABA"
                android:drawableLeft="@drawable/ic_baseline_phone_24"
                android:drawablePadding="5dp"
                android:text="Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bakron_kembali"
                android:textColor="#BFBABA"
                android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
                android:drawablePadding="5dp"
                android:text="Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>



            <TextView
                android:textColor="#BFBABA"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Edit"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:textColor="#BFBABA"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Logout"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>





        </LinearLayout>

    </LinearLayout>



</LinearLayout>