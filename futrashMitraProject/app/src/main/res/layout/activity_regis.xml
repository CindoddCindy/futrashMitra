<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#232740"
    tools:context=".view.Regis">

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/abuabu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/food_trash_3rd"
                tools:layout_editor_absoluteX="139dp"
                tools:layout_editor_absoluteY="239dp">

            </de.hdodenhof.circleimageview.CircleImageView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <TextView
                android:textColor="#BFBABA"
                android:layout_marginTop="12dp"
                android:textSize="15dp"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:text="Regis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>



            <TextView
                android:textColor="#BFBABA"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="5dp"
                android:text="Nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <EditText
                android:id="@+id/et_regis_name"
                android:gravity="center"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>

            <TextView
                android:textColor="#BFBABA"
                android:drawableLeft="@drawable/ic_baseline_mail_24"
                android:drawablePadding="5dp"
                android:text="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <EditText
                android:gravity="center"
                android:id="@+id/et_regis_email"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>
            <TextView
                android:textColor="#BFBABA"
                android:drawableLeft="@drawable/ic_baseline_phone_24"
                android:drawablePadding="5dp"
                android:text="Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <EditText
                android:gravity="center"
                android:id="@+id/et_regis_phone"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>
            <TextView
                android:textColor="#BFBABA"
                android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
                android:drawablePadding="5dp"
                android:text="Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <EditText
                android:id="@+id/et_regis_password"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>


            <TextView
                android:id="@+id/tv_regis_btn_subbmit"
                android:textColor="#BFBABA"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Regis"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>


            </LinearLayout>
            </ScrollView>



        </LinearLayout>

    </LinearLayout>



</LinearLayout>