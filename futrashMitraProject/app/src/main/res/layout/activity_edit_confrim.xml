<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#232740"
    tools:context=".view.EditConfrimActivity">
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/abuabu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <TextView
            android:id="@+id/tv_confirm_detail_nama_penjual"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:textColor="#BFBABA"
            android:layout_marginTop="5dp"
            android:textSize="10dp"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="Nama Penjual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </TextView>



        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/example_image"
            tools:layout_editor_absoluteX="139dp"
            tools:layout_editor_absoluteY="239dp">

        </de.hdodenhof.circleimageview.CircleImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">



            <ImageView
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/garis">

            </ImageView>



            <LinearLayout
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_confirm_detail_jenis_makanan"
                        android:padding="2dp"
                        android:textSize="10dp"
                        android:textColor="#BFBABA"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_baseline_local_dining_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jenis Makanan "
                        />
                    <TextView
                        android:id="@+id/tv_confirm_detail_date_order"
                        android:padding="2dp"
                        android:textSize="10dp"
                        android:textColor="#BFBABA"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_baseline_date_range_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Tanggal Order "
                        />

                    <TextView
                        android:id="@+id/tv_confirm_detail_location_customer"
                        android:padding="2dp"
                        android:textSize="10dp"
                        android:textColor="#BFBABA"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_baseline_location_on_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lokasi Customer "
                        />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_confirm_detail_cutomer_name"
                        android:textColor="#BFBABA"
                        android:padding="2dp"
                        android:textSize="10dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_baseline_person_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Cutomer"
                        />
                    <TextView
                        android:id="@+id/tv_confirm_detail_cust_phone"
                        android:padding="2dp"
                        android:textSize="10dp"
                        android:textColor="#BFBABA"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_baseline_phone_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        />
                    <TextView
                        android:id="@+id/tv_confirm_detail_shiping_type"
                        android:padding="2dp"
                        android:textSize="10dp"
                        android:textColor="#BFBABA"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_baseline_local_shipping_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jenis pengiriman"
                        />




                </LinearLayout>



            </LinearLayout>

            <ImageView
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/garis">

            </ImageView>
            <TextView
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                android:textColor="#BFBABA"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:text="Konfirmasi Order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <TextView
                android:textColor="#BFBABA"
                android:drawablePadding="5dp"
                android:text="Tanggal Confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <TextView
                android:id="@+id/tv_confirm_detail_tgal_confirm"
                android:textColor="#BFBABA"
                android:gravity="center"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>




            <TextView
                android:textColor="#BFBABA"
                android:drawablePadding="5dp"
                android:text="Terima / Tolak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <TextView
                android:id="@+id/tv_confirm_detail_terima_tolak"
                android:textColor="#BFBABA"
                android:gravity="center"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:textColor="#BFBABA"
                android:drawablePadding="5dp"
                android:text="Catatan/ Alasan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <TextView
                android:id="@+id/tv_confirm_detail_catatan_alasan"
                android:textColor="#BFBABA"
                android:gravity="center"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/tv_confirm_detail_btn_Edit"
                        android:textColor="#BFBABA"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Edit"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:background="@drawable/bakron_kembali"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_confirm_detail_btn_kembali"
                        android:textColor="#BFBABA"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Kembali"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:background="@drawable/bakron_kembali"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_confirm_detail_btn_hapus"
                        android:textColor="#BFBABA"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Hapus"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:background="@drawable/bakron_kembali"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>


            </ScrollView>






        </LinearLayout>

    </LinearLayout>









</LinearLayout>