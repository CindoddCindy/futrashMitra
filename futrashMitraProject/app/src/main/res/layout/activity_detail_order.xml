                        android:shadowColor="#F1F5F6"
                        android:shadowRadius="2"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:textColor="#BFBABA"
                        android:layout_marginTop="12dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:drawablePadding="5dp"
                        android:text="Harga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                    </TextView>
                    <TextView
                        android:id="@+id/tv_detail_order_harga"
                        android:layout_marginBottom="10dp"
                        android:textColor="#BFBABA"
                        android:layout_marginTop="12dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:drawablePadding="5dp"
                        android:text="Harga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                    </TextView>

                    <TextView
                        android:shadowColor="#F1F5F6"
                        android:shadowRadius="2"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:textColor="#BFBABA"
                        android:layout_marginTop="12dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:drawablePadding="5dp"
                        android:text="Saran Penggunaan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                    </TextView>
                    <TextView
                        android:id="@+id/tv_detail_order_saran_penggunaan"
                        android:layout_marginBottom="10dp"
                        android:textColor="#BFBABA"
                        android:layout_marginTop="12dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:drawablePadding="5dp"
                        android:text="Saran penggunaan"
                        android:layout_width="match_parent"
