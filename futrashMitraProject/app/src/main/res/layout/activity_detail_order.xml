                        android:id="@+id/tv_detail_order_diposting_karena"
                        android:textColor="#BFBABA"
                        android:layout_marginTop="12dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:drawablePadding="5dp"
                        android:text="Diposting Karena"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                    </TextView>

                    <TextView
                        android:shadowColor="#F1F5F6"
                        android:shadowRadius="2"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:textColor="#BFBABA"
                        android:layout_marginTop="12dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:drawablePadding="5dp"
                        android:text="Berat Makanan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                    </TextView>
                    <TextView
                        android:id="@+id/tv_detail_order_berat_makanan"
                        android:layout_marginBottom="10dp"
                        android:textColor="#BFBABA"
                        android:layout_marginTop="12dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:drawablePadding="5dp"
                        android:text="Berat makanan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                    </TextView>

                    <TextView
                        android:shadowColor="#F1F5F6"
                        android:shadowRadius="2"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:textColor="#BFBABA"
                        android:layout_marginTop="12dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:drawablePadding="5dp"
                        android:text="Kandungan Kimia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                    </TextView>
                    <TextView
                        android:id="@+id/tv_detail_order_kandungan_kimia"
                        android:layout_marginBottom="10dp"
                        android:textColor="#BFBABA"
                        android:layout_marginTop="12dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:drawablePadding="5dp"
                        android:text="Kandungan kimia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                    </TextView>



                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:shadowColor="#F1F5F6"
                        android:shadowRadius="2"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:textColor="#BFBABA"
                        android:layout_marginTop="12dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:drawablePadding="5dp"
                        android:text="Nama Toko"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                    </TextView>
                    <TextView
                        android:id="@+id/tv_detail_order_nama_toko"
                        android:layout_marginBottom="10dp"
                        android:textColor="#BFBABA"
                        android:layout_marginTop="12dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:drawablePadding="5dp"
                        android:text="Nama toko"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                    </TextView>


