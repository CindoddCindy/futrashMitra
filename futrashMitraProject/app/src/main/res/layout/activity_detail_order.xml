<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#232740"
    tools:context=".view.DetailOrder">
    <LinearLayout
        android:background="@drawable/abuabu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:shadowColor="#F0F5F6"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:textColor="#EDE5E5"
                    android:text="Diorder pada tanggal"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </TextView>

                <TextView
                    android:id="@+id/tv_detail_order_tanggal"
                    android:layout_weight="1"
                    android:shadowColor="#F0F5F6"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:textColor="#EDE5E5"
                    android:text="Tanggal order"
                    android:gravity="center"
                    android:textStyle="normal"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </TextView>


            </LinearLayout>

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/garis">


            </ImageView>




        </LinearLayout>



        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:gravity="center"
                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardMaxElevation="5dp"
                android:layout_margin="5dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:src="@drawable/example_image"
                        android:scaleType="fitXY">

                    </ImageView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:textColor="#BFBABA"
                android:layout_marginTop="12dp"
                android:textSize="15dp"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:text="Order Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <TextView
                android:id="@+id/tv_test_id"
                android:textColor="#BFBABA"
                android:layout_marginTop="12dp"
                android:textSize="15dp"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:text="id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>




            <TextView
                android:textColor="#BFBABA"
                android:drawablePadding="5dp"
                android:text="Nama Customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <TextView
                android:id="@+id/tv_detail_order_nama_customer"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:textColor="#BFBABA"
                android:drawablePadding="5dp"
                android:text="Lokasi Customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <TextView
                android:id="@+id/tv_detail_order_lokasi_customer"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:textColor="#BFBABA"
                android:drawablePadding="5dp"
                android:text="Nomor Telepon Customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <TextView
                android:id="@+id/tv_detail_order_phone_customer"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:textColor="#BFBABA"
                android:text="Jenis Pengiriman Makanan"
