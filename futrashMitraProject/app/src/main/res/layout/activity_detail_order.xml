                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>


            <ImageView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/garis">


            </ImageView>




            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_detail_order_nama_makanan"
                        android:shadowColor="#E6ECED"
                        android:shadowRadius="2"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:drawableLeft="@drawable/ic_baseline_local_dining_24"
                        android:layout_weight="1"
                        android:textColor="#BFBABA"
                        android:layout_marginTop="12dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:drawablePadding="5dp"
                        android:text="Nama Makanan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
