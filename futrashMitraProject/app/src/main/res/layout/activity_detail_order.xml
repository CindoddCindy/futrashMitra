                    </TextView>






                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_detail_order_btn_konfirm_order"
                android:textColor="#BFBABA"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Konfirm Order"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/tv_detail_order_btn_hbngi_customer"
                android:textColor="#BFBABA"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Hubungi Customer "
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/tv_detail_order_btn_hapus_order"
                android:textColor="#BFBABA"
                android:layout_marginTop="20dp"
