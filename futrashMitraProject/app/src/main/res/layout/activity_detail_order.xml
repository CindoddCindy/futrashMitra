                        android:layout_marginBottom="10dp"
                        android:textColor="#BFBABA"
                        android:layout_marginTop="12dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:drawablePadding="5dp"
