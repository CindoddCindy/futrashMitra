<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#232740"
    tools:context=".view.DetailOrder">

    <LinearLayout
        android:background="@drawable/abuabu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:gravity="center"
                android:layout_gravity="center"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardMaxElevation="5dp"
                android:layout_margin="5dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_width="350dp"
                        android:layout_height="350dp"
                        android:src="@drawable/example_image"
                        android:scaleType="fitXY">

                    </ImageView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:textColor="#BFBABA"
                android:layout_marginTop="12dp"
                android:textSize="15dp"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:text="Order Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <TextView
                android:textColor="#BFBABA"
                android:drawablePadding="5dp"
                android:text="Nama Customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <TextView
                android:background="@drawable/bakron_kembali"
                android:id="@+id/tv_order_detail_nama_customer"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:textColor="#BFBABA"
                android:drawablePadding="5dp"
                android:text="Lokasi Customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <TextView
                android:id="@+id/tv_order_detail_lokasi_customer"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>


            <TextView
                android:textColor="#BFBABA"
                android:drawablePadding="5dp"
                android:text="Nomor Telepon Customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <TextView
                android:id="@+id/tv_order_detail_phone_customer"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>


            <TextView
                android:textColor="#BFBABA"
                android:text="Jenis Pengiriman Makanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <TextView
                android:textColor="#BFBABA"
                android:id="@+id/tv_order_detail_jenis_pengiriman"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>




            <TextView
                android:textColor="#BFBABA"
                android:drawablePadding="5dp"
                android:text="Nama Makanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <TextView
                android:id="@+id/tv_order_detail_nama_makanan"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:textColor="#BFBABA"
                android:drawablePadding="5dp"
                android:text="Nama Mitra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <TextView
                android:id="@+id/tv_order_detail_nama_mitra"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:textColor="#BFBABA"
                android:drawablePadding="5dp"
                android:text="Lokasi Makanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <TextView
                android:id="@+id/tv_order_detail_lokasi_makanan"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:textColor="#BFBABA"
                android:drawablePadding="5dp"
                android:text="Harga Makanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <TextView
                android:id="@+id/tv_order_detail_harga_makanan"
                android:textColor="#BFBABA"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>




            <TextView
                android:id="@+id/tv_order_detail_btn_konfirm"
                android:textColor="#BFBABA"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Konfirmasi "
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:background="@drawable/bakron_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>




        </LinearLayout>

    </LinearLayout>




</ScrollView>