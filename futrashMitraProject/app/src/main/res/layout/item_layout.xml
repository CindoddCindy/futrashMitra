<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_item"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        android:layout_margin="5dp"
        app:cardMaxElevation="5dp">


        <LinearLayout
            android:background="#232740"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <de.hdodenhof.circleimageview.CircleImageView
                    android:padding="5dp"

                    android:layout_gravity="center"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/example_image">

                </de.hdodenhof.circleimageview.CircleImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_item_nama_penjual"
                        android:layout_weight="1"
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:textColor="#BFBABA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Penjual "
                        />

                    <ImageView
                        android:id="@+id/iv_item_edit_item"
                        android:src="@drawable/ic_baseline_edit_24"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                    <ImageView
                        android:id="@+id/iv_item_delete_item"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       android:src="@drawable/ic_baseline_delete_24"
                        />





                </LinearLayout>



                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tv_item_jenis_makanan"
                            android:padding="5dp"
                            android:textSize="12dp"
                            android:textColor="#BFBABA"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_local_dining_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jenis Makanan "
                            />
                        <TextView
                            android:id="@+id/tv_item_lokasi"
                            android:padding="5dp"
                            android:textSize="12dp"
                            android:textColor="#BFBABA"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_location_on_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lokasi Makanan "
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tv_item_nama_makanan"
                            android:textColor="#BFBABA"
                            android:padding="5dp"
                            android:textSize="12dp"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_food_bank_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Makanan "
                            />
                        <TextView
                            android:id="@+id/tv_item_harga_makanan"
                            android:padding="5dp"
                            android:textSize="12dp"
                            android:textColor="#BFBABA"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_monetization_on_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Harga Makanan"
                            />



                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>