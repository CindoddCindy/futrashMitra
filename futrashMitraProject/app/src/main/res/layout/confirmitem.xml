<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_confirm_confirm"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_margin="5dp"
        app:cardMaxElevation="5dp">


        <LinearLayout
            android:background="#232740"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:shadowColor="#E6ECED"
                        android:shadowRadius="2"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:id="@+id/tv_confirm_item_nama_penjual"
                        android:gravity="center"
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:textColor="#BFBABA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Penjual "
                        />



                    <de.hdodenhof.circleimageview.CircleImageView
                        android:padding="5dp"

                        android:layout_gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/example_image">

                    </de.hdodenhof.circleimageview.CircleImageView>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:shadowColor="#E6ECED"
                                android:shadowRadius="2"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:id="@+id/tv_confirm_order_terima_tolak"
                                android:textColor="#EDE5E5"
                                android:text="Status Order"
                                android:gravity="center"
                                android:textStyle="normal"
                                android:textSize="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </TextView>
                            <TextView

                                android:shadowColor="#E6ECED"
                                android:shadowRadius="2"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:textColor="#EDE5E5"
                                android:text="Catatan Mitra"
                                android:gravity="center"
                                android:textStyle="normal"
                                android:textSize="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </TextView>
                            <TextView
                                android:shadowColor="#E6ECED"
                                android:shadowRadius="2"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:textColor="#EDE5E5"
                                android:text="Tanggal Order"
                                android:gravity="center"
                                android:textStyle="normal"
                                android:textSize="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </TextView>




                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_confirm_item_status_order"
                                android:textColor="#EDE5E5"
                                android:text="Status Order"
                                android:gravity="left"
                                android:textStyle="normal"
                                android:textSize="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </TextView>
                            <TextView
                                android:id="@+id/tv_confirm_item_catatan_mitra"
                                android:textColor="#EDE5E5"
                                android:text="Catatan Mitra"
                                android:gravity="left"
                                android:textStyle="normal"
                                android:textSize="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </TextView>
                            <TextView
                                android:id="@+id/tv_confirm_item_tanggal_confirm"
                                android:textColor="#EDE5E5"
                                android:text="Tanggal Order"
                                android:gravity="left"
                                android:textStyle="normal"
                                android:textSize="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </TextView>




                        </LinearLayout>


                    </LinearLayout>




                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/garis">


                        </ImageView>




                    </LinearLayout>




                </LinearLayout>




                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tv_confirm_item_jenis_makanan"
                            android:padding="2dp"
                            android:gravity="center"
                            android:textSize="10dp"
                            android:textColor="#BFBABA"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_local_dining_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jenis Makanan "
                            />
                        <TextView
                            android:gravity="left"
                            android:id="@+id/tv_confirm_item_lokasi_customer"
                            android:padding="2dp"
                            android:textSize="10dp"
                            android:textColor="#BFBABA"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_location_on_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lokasi Customer "
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:gravity="center"
                            android:id="@+id/tv_confirm_item_cutomer_name"
                            android:textColor="#BFBABA"
                            android:padding="2dp"
                            android:textSize="10dp"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_person_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Cutomer"
                            />

                        <TextView
                            android:id="@+id/tv_confirm_item_phone_customer"
                            android:gravity="center"
                            android:textColor="#BFBABA"
                            android:padding="2dp"
                            android:textSize="10dp"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_phone_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="phone Cutomer"
                            />



                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>